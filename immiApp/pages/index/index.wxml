<view class="container">
    <!--首页轮播-->
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <!---imgUrls是轮播图的对象数组 对象中应该有url 和 跳转学校的id 点击跳转到school页面 -->
      <block wx:for="{{schoolData}}" wx:key="id">
        <swiper-item>
              <navigator url="../school/school?schoolId={{item.university_id}}">
                <image src="{{item.image}}" class="slide-image" width="100%" height="300"  />
                <!--src="{{hostImg}}{{item.filename}}"-->
              </navigator>
        </swiper-item>
      </block>
    </swiper>

    <!--搜索跳转-->
    <view class="search df">
    <input class="df_1" placeholder="you want to search..." focus="{{focus}}" value="{{searchValue}}" bindtap="searchRedirect"/>
    <button bindtap="searchRedirect"><image class="searchcion" src="/images/search.png"></image></button>
   </view>
    <view class="line"></view>

   <!--学校推荐列表-->  
   <view class="recommendSchool">
      <navigator class="pr rsnav" url="../school/school?schoolId={{item.university_id}}" hover-class="changestyle"
                 wx:for="{{schoolData}}" wx:key="recommendSchool_id">
        <image class="photo" src="{{item.badge}}" width="50" height="50" ></image>
        <view class="schoolname">{{item.university_name}}</view>
      </navigator>
    </view>
    <!--学校排名-->
    <view class="schoolranking">
      <view class="line"></view>
      <view class="rankname">
        <text>schoolrank</text>
      </view>
      <navigator class="mt10"   wx:for="{{schoolData}}" wx:key="recommendSchool_id" url="../school/school?schoolId={{item.university_id}}" >
        <view class="qbdd1">
            <span class="font_14 c3">{{item.university_name}}</span>
            <span class="font_14 c3">{{item.rank}}</span>
            <span class="fl_r c9 font_12 l_h20" hover-class="none"> ></span>
        </view>      
      </navigator>    
    
    </view>
    <!--<image src=" http://localhost:8088/yiminshop//Public/upload/1516077989.png"></image>-->
  </view>